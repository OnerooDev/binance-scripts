# shellcheck source=lib/common.sh
. "$LIB_DIR/common.sh"

if [[ -z "$USDTUSDN" ]]; then
    USDTUSDN=$(dappCreate freeliquid-ct-optimized UniswapPairUSDTUSDCStub "$(seth --to-uint256 "$(seth --to-wei 1000000 ETH)")")
    log "USDTUSDN=$USDTUSDN"
    export USDTUSDN
fi

token=USDTUSDN
type=$(jq -r ".tokens.${token} | .pipDeploy | .type | values" "$CONFIG_FILE")
if [[ "${type}" == "freeliquid" ]]; then
	priceETHUSDT=$(jq -r ".tokens.${token} | .pipDeploy | .oracleETHUSDT | values" "$CONFIG_FILE")
	priceUSDETH=$(jq -r ".tokens.${token} | .pipDeploy | .oracleUSDETH | values" "$CONFIG_FILE")
	tokenUSDT=$(jq -r ".tokens.${token} | .pipDeploy | .tokenUSDT | values" "$CONFIG_FILE")

	{ test "$priceETHUSDT" == "" || test "$tokenUSDT" == "" || test "$priceUSDETH" == "" || test "$USDTUSDN" == ""; } && echo "No parameters for USDTUSDN oracle" && exit 1
	sethSend "$VAL_USDTUSDN" "setup(address,address,address,address,bool)" "$priceETHUSDT" "$priceUSDETH" "$USDTUSDN" "$tokenUSDT" true
fi

# shellcheck source=libexec/dss/deploy-ilk
. "$LIBEXEC_DIR/dss/deploy-ilk-fl" "USDTUSDN" "${1:-"A"}" "GemJoinWithReward" "NONE" "$FL_REWARDER" "$FL_UNI_ADAPTER_STABLES"
